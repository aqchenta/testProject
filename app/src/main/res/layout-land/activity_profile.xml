<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    tools:context="com.example.maa.testproject.MainActivity">


        <View
            android:id="@+id/ellipse"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="-11dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-150dp"
            android:background="@drawable/ellipse"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_editor_absoluteY="-190dp" />

        <ImageView
            android:id="@+id/ellipse_2"
            android:layout_width="197dp"
            android:layout_height="197dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/ellipse_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ellipse_3"
            android:layout_width="182dp"
            android:layout_height="182dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toTopOf="@+id/ellipse_2" />


        <TextView
            android:id="@+id/gs"
            android:layout_width="244dp"
            android:layout_height="31dp"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"
            android:text="@string/gs"
            android:textAppearance="@style/gs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toBottomOf="@+id/ellipse_2" />

        <TextView
            android:id="@+id/name"
            android:layout_width="215dp"
            android:layout_height="21dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal"
            android:text="@string/name"
            android:textAppearance="@style/name"
            app:layout_constraintBottom_toTopOf="@+id/ellipse_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/status"
            android:layout_width="37dp"
            android:layout_height="14dp"
            android:layout_marginBottom="16dp"
            android:text="@string/status"
            android:textAppearance="@style/status"
            app:layout_constraintBottom_toTopOf="@+id/ellipse_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/post"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginBottom="424dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="@string/post"
            android:textAppearance="@style/post"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_default="wrap" />

        <TextView
            android:id="@+id/friend"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_marginBottom="424dp"
            android:layout_marginLeft="304dp"
            android:gravity="center_horizontal"
            android:text="@string/friend"
            android:textAppearance="@style/friend"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_default="wrap" />


        <ImageView
            android:id="@+id/rectangle_4"
            android:layout_width="201dp"
            android:layout_height="184dp"
            android:layout_marginStart="8dp"
            android:elevation="6dp"
            android:src="@drawable/bg"
            app:layout_constraintStart_toStartOf="@+id/post"
            app:layout_constraintTop_toTopOf="@+id/rectangle_7"
            app:layout_constraintWidth_default="wrap" />

        <ImageView
            android:id="@+id/rectangle_5"
            android:layout_width="99dp"
            android:layout_height="88dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rectangle_5"
            android:elevation="6dp"
            app:layout_constraintLeft_toLeftOf="@+id/ellipse_3"
            app:layout_constraintStart_toStartOf="@+id/ellipse_3"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_4"
            app:layout_constraintWidth_default="wrap" />

        <ImageView
            android:id="@+id/rectangle_6"
            android:layout_width="170dp"
            android:layout_height="138dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg"
            android:elevation="6dp"
            app:layout_constraintLeft_toLeftOf="@+id/rectangle_7"
            app:layout_constraintStart_toStartOf="@+id/rectangle_7"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_7" />

        <ImageView
            android:id="@+id/rectangle_7"
            android:layout_width="170dp"
            android:layout_height="138dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg"
            android:elevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle"
            app:layout_constraintWidth_default="wrap" />

        <TextView
            android:id="@+id/message"
            android:layout_width="193dp"
            android:layout_height="16dp"
            android:elevation="6dp"
            android:gravity="center_horizontal"
            android:text="@string/message"
            android:textAppearance="@style/message"
            app:layout_constraintEnd_toEndOf="@+id/ellipse_2"
            app:layout_constraintRight_toRightOf="@+id/ellipse_2"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toTopOf="@+id/rectangle" />

        <ImageView
            android:id="@+id/rectangle_2"
            android:layout_width="99dp"
            android:layout_height="88dp"
            android:background="@drawable/rectangle_2"
            android:elevation="6dp"
            app:layout_constraintEnd_toStartOf="@+id/message"
            app:layout_constraintRight_toLeftOf="@+id/message"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_4" />


        <TextView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="414dp"
            android:layout_height="61dp"
            android:background="@drawable/rectangle_3"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>